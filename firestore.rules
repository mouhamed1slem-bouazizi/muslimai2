rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat sessions - users can only access their own chat sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to list their own chat sessions
    match /chat_sessions/{sessionId} {
      allow list: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Additional security rules for other collections if needed
    // You can add more rules here for other collections in your app

    // Public read-only app content (e.g., overlay text)
    match /app_content/{docId} {
      allow read: if true;
      allow write: if false; // restrict writes to admins via console or future rules
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}